@model IEnumerable<InterSolarCAD_Core.Models.Admin.Entity.WorkProcess>

<div class="container">
    <div class="row">
        <p>
            <a class="btn btn-w-m btn-outline btn-success" asp-action="Create">Create new</a>
        </p>

        <div class="panel panel-primary" style="padding: 0;">
            <div class="panel-heading">
                <h3 class="text-uppercase">
                    Vacancies
                </h3>
            </div>
            <div class="panel-body">
                <div class="ibox-content ibox-content" id="ibox-content">
                    <div>
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Order)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Title)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Desc)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.FontAwsome)
                                    </th>
                                    <th></th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {

                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Order)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Title)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Desc)
                                    </td>
                                    <td>
                                        <i class="fa @item.FontAwsome"></i>
                                    </td>
                                    <td style="width:10%">
                                        <a asp-action="Edit" class="btn btn-default btn-rounded btn-outline" asp-route-id="@item.Id">Edit</a>
                                    </td>
                                    <td style="width:10%">
                                        <a asp-action="Delete" class="btn btn-danger btn-rounded btn-outline" asp-route-id="@item.Id">Delete</a>
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
