            <!--<h2 class="mb-2 text-center">Vacancies</h2>-->
            @*<div class="row justify-content-center">*@
            <section class="container about" id="Vacancy">
                <h2>Vacancies</h2>
                <div class="container">
                    <div class="row">
                        <div class="col-sm">
                            <img src="..//Images/solar8.jpg" class="col-sm" alt="">
                        </div>
                        <div class="col-sm accordion" id="accordionExample">

                            @foreach (var item in Model.Jobs)
                            {
                                count++;
                                string name = $"heading{item.Id}";
                                string cname = $"collapse{item.Id}";
                                string show = count == 1 ? "show" : string.Empty;
                                <div class="card">
                                    <div class="card-header" id="@name">
                                        <h5 class="mb-0">
                                            <button class="btn btn-link collapsed " type="button" data-toggle="collapse" data-target="#@cname" aria-expanded="false" aria-controls="@cname">
                                                <h3 class="text-left">@item.Possition</h3>
                                            </button>
                                        </h5>
                                    </div>

                                    <div id="@cname" class="collapse" aria-labelledby="@name" data-parent="#accordionExample">
                                        <div class="card-body">
                                            @Html.Raw(item.Desc)
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </section>
        }

        <section class="container contacts-form" id="ContactUs">
            <h2 class="d-sm-block text-center">Contacts</h2>
            <div class="row no-gutters" style="background-color:#fff">
                <div class="col-md-8 contacts-margins-form">
                    <form asp-action="SubmitForm" method="post" formnovalidate>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-4 custom-field">
                                    <span>first name</span>
                                    <input class="d-block w-100" type="text" name="FirstName" required>
                                </div>
                                <div class="mb-4 custom-field">
                                    <span>last name</span>
                                    <input class="d-block w-100" type="text" name="LastName" required>
                                </div>
                                <div class="mb-4 custom-field">
                                    <span>email</span>
                                    <input class="d-block w-100" type="email" name="Email" required>
                                </div>
                                <div class="mb-4 custom-field">
                                    <span>country</span>
