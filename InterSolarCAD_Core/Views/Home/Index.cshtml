                        <div class="social-links d-flex align-items-center">
                            <a href="@Model.PageContents.Facebook"><i class="fa fa-facebook-f"></i></a>
                            <a href="@Model.PageContents.Linkedin"><i class="fa fa-linkedin-in"></i></a>
                        </div>
                    </div>
                </div>
            </div>
