                    <div class="work-process-item col-md-4">
                        <div class="icon">
                            <img src="../assets/img/icon_shape.png" alt="earth" class="mb-3">
                            <i class="fas @wp.FontAwsome"></i>
                        </div>
                        <h4 class="mb-3">@wp.Title</h4>
                        <p>@wp.Desc</p>
                    </div>
                }
            </div>
        </section>

        <section class="container work" id="Projects">
            <h2 class="mb-4 text-center">Recent Work</h2>
            <p class="text-center mb-5">
                If you are looking to work with us do not hesitate to contact
                us via the contact page.
            </p>
            <div class="row">
                @foreach (var p in Model.Projects)
                {
                    <div class="col-md-4 mb-4 mb-md-0">
                        <div class="work-container">
                            <img class="d-block mb-3" src="../@p.Image">
                            @*<a asp-controller="Projects" asp-action="Details" asp-route-id="@p.Id">*@
                            <h3>@p.Title</h3>
                            @*</a>*@
                            <p>@p.ShortDesc</p>
                        </div>
                    </div>
                }
            </div>
            <div class="d-flex justify-content-center">
                <a href="~/Projects" class="button-big primary-button green-to-blue mt-5">See All</a>
            </div>
        </section>

        @if (Model.Testimonials != null && Model.Testimonials.Count > 0)
        {
            <section class="container feedback">
                <h2 class="mb-2 text-center">Testimonials</h2>
                <p class="text-center mb-5">What Our Fantastic Clients Say</p>
                <div class="feedback-card-swiper-container swiper-container">
                    <div class="swiper-wrapper">
                        @foreach (var t in Model.Testimonials)
                        {
                            <div class="swiper-slide">
                                <div class="feedback-card">
                                    <i class="fa fa-quote-left d-block mb-3"></i>
                                    <p>
                                        @t.ShortDesc
                                    </p>
                                    <h4>@t.Company</h4>
                                </div>
                            </div>
                        }

                    </div>
                </div>
            </section>
        }
        @if (Model.Clients != null && Model.Clients.Count > 0)
        {
            <section class="container our-clients">
                <h2 class="mb-2 text-center">Our Happy Clients</h2>
                <p class="text-center mb-5">Our clients are the life-source of our business and the force behind our innovations.</p>
                <div class="our-clients-swiper-container swiper-container ">
                    <div class="swiper-wrapper clients-swiper-wrapper">
                        @foreach (var c in Model.Clients)
                        {
                            <div class="swiper-slide text-center clients-swiper-slide">
                                <img src="../@c.ImageURL" alt="@c.Name">
                            </div>
                        }
