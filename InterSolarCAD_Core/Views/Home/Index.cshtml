                    <div class="team-swiper-container swiper-container">
                        <div class="swiper-wrapper team-swiper-wrapper">
                            @foreach (var t in Model.TeamMembers)
                            {
                                <div class="swiper-slide team-swiper-slide">
                                    <div class="work-container">
