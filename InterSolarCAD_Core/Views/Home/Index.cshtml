@model InterSolarCAD_Core.Models.Web.ViewModel

@{
    Layout = null;
    string jsc = string.Empty;
    foreach (var item in Model.MapStates)
    {
        //jsc += "{ \"id\":  \"US-" + item.StateCode + "\", \"showAsSelected\" : true},";
        jsc += item.StateCode.ToLower() + ":'#6ed34b', ";
    }

    if (Model.MapStates.Count() > 0)
    {
        jsc = jsc.Remove(jsc.Length - 2);
    }

    int count = 0;
}

