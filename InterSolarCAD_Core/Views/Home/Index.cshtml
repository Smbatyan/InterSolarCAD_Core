                </p>
                <div class="work-swiper-container swiper-container">
                    <div class="swiper-wrapper justify-content-center" style="margin: 2%;">
                        @foreach (var p in Model.News)
                        {
                            <div class="swiper-slide">
                                <div class="work-container">
                                    <img class="d-block mb-3" src="../@p.MainImage" alt="">
                                    <a href="News/Details/@p.Id"><h3>@p.Title</h3></a>
                                    <p>@p.ShortDesc</p>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <div class="d-flex justify-content-center">
                    <a href="~/News" class="button-big primary-button green-to-blue mt-5">see all</a>
