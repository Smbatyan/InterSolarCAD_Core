                                    <div class="g-recaptcha" style="margin-left:4%" data-sitekey="6LdY2eQUAAAAAJZI508FE7an-mzFMNWi8CLFpL0M"></div>
                                </div>
                                <div class="text-center contacts-button-pos">
                                    <input type="submit" class="primary-button button-little orange-to-blue" value="send">
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="col-md-3 contacts-margins-details ">
                    <div class="contact-details">

                        <div class="d-flex mb-4">
                            <img src="/assets/img/web.svg" alt="">
                            <div><a href="mailto:@Model.ContactUs.Email">@Model.ContactUs.Email</a></div>
                        </div>
                        <div class="d-flex mb-4">
                            <img src="/assets/img/pin.svg" alt="">
