        <p>
            <a class="btn btn-w-m btn-outline btn-success" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
        </p>

        <div class="panel panel-primary  col-md-8 col-md-offset-2" style="padding: 0;">
            <div class="panel-heading">
                <h3 class="text-uppercase">
                    Page Contents
                </h3>
            </div>
            <div class="panel-body">
                <div class="ibox-content ibox-content  col-md-offset-1" id="ibox-content">
                    <div>
                        <span></span>
                    </div>
                    <div>
                        <div id="vertical-timeline" class="vertical-container dark-timeline">
                            <div class="vertical-timeline-block">
                                <div class="vertical-timeline-icon navy-bg">
                                    <i class="fa fa-angle-up"></i>
                                </div>

                                <div class="vertical-timeline-content col-md-10">
                                    <h2 class="forum-item-title border-bottom">@Html.DisplayNameFor(model => model.Title)</h2>

                                    <p>@Html.DisplayFor(modelItem => modelItem.Title)</p>
                                </div>
                            </div>
                        </div>

                        <div id="vertical-timeline" class="vertical-container dark-timeline">
                            <div class="vertical-timeline-block">
                                <div class="vertical-timeline-icon navy-bg">
                                    <i class="fa fa-eye"></i>
                                </div>

                                <div class="vertical-timeline-content col-md-10">
                                    <h2 class="forum-item-title border-bottom">@Html.DisplayNameFor(model => model.OurTeamImage)</h2>

                                    <p><img src="@Model.OurTeamImage" style="max-width:80%" /></p>
                                </div>
                            </div>
                        </div>
                        <div id="vertical-timeline" class="vertical-container dark-timeline">
                            <div class="vertical-timeline-block">
                                <div class="vertical-timeline-icon navy-bg">
                                    <i class="fa fa-compress"></i>
                                </div>

                                <div class="vertical-timeline-content col-md-10">
                                    <h2 class="forum-item-title border-bottom">@Html.DisplayNameFor(model => model.ShortDesc)</h2>

                                    <p>@Html.DisplayFor(modelItem => modelItem.ShortDesc)</p>
                                </div>
                            </div>
                        </div>
                        <div id="vertical-timeline" class="vertical-container dark-timeline">
                            <div class="vertical-timeline-block">
                                <div class="vertical-timeline-icon navy-bg">
                                    <i class="fa fa-expand"></i>
                                </div>

                                <div class="vertical-timeline-content col-md-10">
                                    <h2 class="forum-item-title border-bottom">@Html.DisplayNameFor(model => model.LongDesc)</h2>

                                    <p> @Html.Raw(Model.LongDesc)</p>
                                </div>
                            </div>
                        </div>

                        <div id="vertical-timeline" class="vertical-container dark-timeline">
                            <div class="vertical-timeline-block">
                                <div class="vertical-timeline-icon navy-bg">
                                    <i class="fa fa-play-circle"></i>
                                </div>

                                <div class="vertical-timeline-content col-md-10">
                                    <h2 class="forum-item-title border-bottom">@Html.DisplayNameFor(model => model.SliderVideoURL)</h2>

                                    <p> <a href="@Model.SliderVideoURL" target="_blank">Click to see</a></p>
                                </div>
                            </div>
                        </div>

                        <div id="vertical-timeline" class="vertical-container dark-timeline">
                            <div class="vertical-timeline-block">
                                <div class="vertical-timeline-icon navy-bg">
                                    <i class="fa fa-facebook"></i>
                                </div>

