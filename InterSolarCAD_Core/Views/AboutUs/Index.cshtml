@model IEnumerable<InterSolarCAD_Core.Models.Admin.Entity.AboutUs>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row">
        @if (Model.Count() == 0)
        {
            <p>
                <a class="btn btn-w-m btn-outline btn-success" asp-action="Create">Create new</a>
            </p>
        }
        else
        {
            <p>
                <a class="btn btn-w-m btn-outline btn-success" asp-action="Edit" asp-route-id="@Model.First().Id">Edit</a>
            </p>
        }

        <div class="panel panel-primary" style="padding: 0;">
            <div class="panel-heading">
                <h3 class="text-uppercase">
                    About Us
                </h3>
            </div>
            <div class="panel-body">
                <div class="ibox-content ibox-content" id="ibox-content">

                    <div>
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.LongDesc)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <img src="@item.ImageURL" style="max-height: 150px"/>
                                            </td>
                                        <td>
                                            @Html.Raw(item.LongDesc)
                                        </td>
                                        
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>