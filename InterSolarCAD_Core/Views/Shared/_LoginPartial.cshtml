@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item" style="margin-top: 15px; margin-right: 8px">
        Hello @User.Identity.Name!
        @*<a  class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"></a>*@
    </li>
    <li class="nav-item" style="margin-top: 8px">
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            @*<button type="submit" class="btn btn-info btn-lg">
                Log out
            </button>*@
            <button type="submit" class="btn btn-w-m btn-danger btn-outline"> <span class="glyphicon glyphicon-log-out"></span> Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item" style="margin-right:15px">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
