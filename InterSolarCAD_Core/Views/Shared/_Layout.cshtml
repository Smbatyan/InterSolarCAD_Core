@{
    bool finded = false;

    string IsActive(string controller)
    {

        if (!finded)
        {
            if (Url.ActionContext.ActionDescriptor.RouteValues["controller"] == controller)
            {
                finded = true;
                return "active";
            }
            else
            {
                return string.Empty;
            }
        }
        else
        {
            return string.Empty;
        }
    }
}


