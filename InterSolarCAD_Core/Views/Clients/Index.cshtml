@model IEnumerable<InterSolarCAD_Core.Models.Admin.Entity.Clients>

<div class="container">
    <div class="row">
        <p>
            <a class="btn btn-w-m btn-outline btn-success" asp-action="Create">Create new</a>
        </p>
        <div class="panel panel-primary" style="padding: 0;">
            <div class="panel-heading">
                <h3 class="text-uppercase">
                    Clients
                </h3>
            </div>
            <div class="panel-body">
                <div class="ibox-content ibox-content" id="ibox-content">

                    <div>
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Name)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.ImageURL)
                                    </th>
                                    <th></th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        <img src="@item.ImageURL" style="max-height:150px" />
                                    </td>

                                    <td style="width:7%">
                                        <a asp-action="Edit" class="btn btn-default btn-rounded btn-outline" asp-route-id="@item.Id">Edit</a>
                                    </td>
                                    <td style="width:7%">
                                        <a asp-action="Delete" class="btn btn-danger btn-rounded btn-outline" asp-route-id="@item.Id">Delete</a>
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>